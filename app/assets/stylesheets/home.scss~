
/* Home box that covers #excerpts and #slides */

#excerpts, #slides {
    -webkit-box-shadow: 10px 10px 10px black;
       -moz-box-shadow: 10px 10px 10px black;
            box-shadow: 10px 10px 10px black;
}

.block {
    display: block;
}
.inline_block {
    display: inline-block;
}

.excerpt, .slide{
    padding: 3px; 
    border: 2px solid #31BBC4;
    -moz-border-radius-vh: 5px;
    -webkit-border-radius: 5px;
            border-radius: 5px; 
}

#slides p, #excerpts p {
    text-align: left;
    white-space: pre-wrap;
}

.slide_header p {
    text-align: center;
}
